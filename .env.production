# ==============================================
# ملف الإعدادات للإنتاج (Production Environment)
# ==============================================

# ==============================================
# إعدادات Flask الأساسية
# ==============================================
FLASK_ENV=production
FLASK_APP=run.py
SECRET_KEY=erp-super-secret-key-2026-production-min-32-chars-long

# ==============================================
# إعدادات قاعدة البيانات PostgreSQL
# ==============================================
# سيتم إنشاؤها تلقائياً على السيرفر
DATABASE_URL=postgresql://erp_user:WILL_BE_GENERATED@localhost:5432/erp_db

# ==============================================
# إعدادات الشركة الافتراضية
# ==============================================
DEFAULT_COMPANY_NAME=CALCATTA BATHROOMS AND TILES
DEFAULT_COMPANY_NAME_EN=CALCATTA BATHROOMS AND TILES
DEFAULT_TAX_NUMBER=123456789
DEFAULT_CITY=الرياض
DEFAULT_COUNTRY=السعودية
DEFAULT_CURRENCY=EUR
DEFAULT_TAX_RATE=15.0

# ==============================================
# إعدادات المستخدم الافتراضي (Admin)
# ==============================================
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@calcatta.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_FULL_NAME=مدير النظام

# ==============================================
# إعدادات الخادم
# ==============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WORKERS=3

# ==============================================
# إعدادات النطاق والبريد الإلكتروني
# ==============================================
DOMAIN_NAME=srv1392516.hstgr.cloud
EMAIL_FOR_SSL=Modoluxeprojects@gmail.com

# ==============================================
# إعدادات الجلسات (Sessions)
# ==============================================
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=3600

# ==============================================
# إعدادات الأمان
# ==============================================
PREFERRED_URL_SCHEME=https
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# ==============================================
# إعدادات التحميل (Uploads)
# ==============================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# ==============================================
# إعدادات اللغة
# ==============================================
BABEL_DEFAULT_LOCALE=ar
BABEL_DEFAULT_TIMEZONE=Asia/Riyadh

# ==============================================
# إعدادات السجلات (Logging)
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/erp.log

# ==============================================
# إعدادات النسخ الاحتياطي
# ==============================================
BACKUP_FOLDER=backups
AUTO_BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# ==============================================
# إعدادات Multi-Tenant
# ==============================================
MULTI_TENANT_ENABLED=True
DEFAULT_TENANT_PLAN=basic
DEFAULT_TRIAL_DAYS=30
DEFAULT_MAX_USERS=5
DEFAULT_MAX_BRANCHES=1
DEFAULT_MAX_PRODUCTS=100
DEFAULT_MAX_INVOICES_PER_MONTH=50

